rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Denuncias: solo administradores autenticados con claim admin pueden leer/escribir.
    match /reports/{reportId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;

      // Subcolección de actualizaciones/auditoría
      match /updates/{updateId} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Cualquier otra colección denegada por defecto.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

