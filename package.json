{
    "name": "claims_platform",
    "version": "1.0.0",
    "description": "Backend MVC Express + TS + Sequelize for denuncias_app schema",
    "type": "module",
    "main": "dist/app.js",
    "scripts": {
        "dev": "bun --watch src/app.ts",
        "start": "node --enable-source-maps dist/app.js",
        "build": "bun build ./src/app.ts --outdir ./dist --target node --external '*'",
        "db:init": "bun scripts/init-db.ts",
        "db:migrate": "bun scripts/run-migrations.ts",
        "db:seed": "bun scripts/seed-users.ts",
        "lint": "eslint --fix"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "mysql2": "^3.14.5",
        "nodemailer": "^7.0.10",
        "on-finished": "^2.4.1",
        "sequelize": "^6.37.7",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/form-data": "^2.5.2",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.3.1",
        "@types/nodemailer": "^7.0.3",
        "@types/on-finished": "^2.3.5",
        "@typescript-eslint/eslint-plugin": "^8.48.1",
        "@typescript-eslint/parser": "^8.48.1",
        "axios": "^1.13.2",
        "eslint": "^9.39.1",
        "form-data": "^4.0.4",
        "globals": "^16.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.48.1"
    }
}
