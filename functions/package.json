{
  "name": "claims-backend",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p .",
    "serve": "bun run build && bunx firebase emulators:start --only functions,firestore,storage",
    "deploy": "bun run build && bunx firebase deploy --only functions,firestore:rules,storage:rules",
    "lint": "eslint .",
    "openapi:gen": "bun run tools/generate-openapi.ts"
  },
  "packageManager": "bun@1.1.20",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "cors": "^2.8.5",
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.7",
    "eslint": "^8.57.0",
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "firebase-tools": "^13.2.0",
    "typescript": "^5.5.3"
  }
}
